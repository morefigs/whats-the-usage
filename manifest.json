{
  "manifest_version": 2,
  "name": "WhatsTheUsage",
  "version": "0.0.4",
  "description": "A graphical usage meter for displaying Internet data usage.",
  "icons": {
    "16"  : "icon16.png",
    "48"  : "icon48.png",
    "128" : "icon128.png"
  },
  "browser_action": {
    "default_icon"  : "icon19.png",
    "default_popup" : "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://customer-webtools-api.internode.on.net/api/*/"
  ],
  "short_name": "WhatsTheUsage"
}